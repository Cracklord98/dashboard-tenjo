{
  "compilerOptions": {
    "ignoreDeprecations": "6.0",
    "module": "commonjs",
    "target": "ES2020",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["**/*.js"],
  "exclude": ["node_modules"]
}
